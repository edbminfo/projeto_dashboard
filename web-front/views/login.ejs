<!doctype html>

<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport"
        content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

    <title>Acesso BM Dashboard</title>

    <meta name="description" content="" />
    <link rel="icon" type="image/x-icon" href="/assets/img/favicon/favicon.ico" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
        href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
        rel="stylesheet" />

    <link rel="stylesheet" href="/assets/vendor/fonts/iconify-icons.css" />
    <link rel="stylesheet" href="/assets/vendor/css/core.css" />
    <link rel="stylesheet" href="/assets/vendor/css/pages/page-auth.css" />

    <script src="/assets/vendor/js/helpers.js"></script>
    <script src="/assets/js/config.js"></script>
<link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#696cff">
    <link rel="apple-touch-icon" href="/assets/img/icons/icon-192x192.png">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    
    <script>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js')
            .then(reg => console.log('Service Worker registrado!', reg))
            .catch(err => console.log('Erro ao registrar SW:', err));
        });
      }
    </script>

</head>

<body>
    <div class="container-xxl">
        <div class="authentication-wrapper authentication-basic container-p-y">
            <div class="authentication-inner">
                <% if (erro) { %>
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <div class="text-center">
                            <%= erro %>
                        </div>
                    </div>
                    <% } %>
                        <div class="card px-sm-6 px-0">

                            <div class="card-body">
                                <div class="app-brand justify-content-center">
                                    <span class="app-brand-link gap-2">
                                        <span class="app-brand-logo demo">
                                            <img src="/assets/img/icons/logo.svg" alt="Logo" width="40" height="40" />
                                        </span>

                                        <span class="app-brand-text demo text-heading fw-bold">Bm Dashboard</span>
                                    </span>
                                </div>

                                <h4 class="mb-1 text-center">Bem-Vindo!</h4>
                                <p class="mb-6 text-center">Acesse seu Painel Gerencial</p>

                                <form id="formSolicitar" action="/auth/solicitar" method="POST" class="mb-6">
                                    <div class="mb-6">
                                        <label for="telefone" class="form-label">WhatsApp / Telefone</label>
                                        <input type="tel" name="telefone" id="telefone" class="form-control"
                                            placeholder="(DDD) 9 9999-9999" autofocus required />
                                    </div>

                                    <div class="mb-6">
                                        <button class="btn btn-primary d-grid w-100" type="submit" id="btnSubmit">
                                            <span class="d-flex align-items-center justify-content-center">
                                                <span id="btnText">Solicitar Código</span>

                                                <div id="btnSpinner"
                                                    class="spinner-border spinner-border-sm text-white ms-2 d-none"
                                                    role="status">
                                                    <span class="visually-hidden">Loading...</span>
                                                </div>
                                            </span>
                                        </button>
                                    </div>
                                </form>

                                <p class="text-center">
                                    <span>Enviaremos um código de acesso.</span>
                                </p>
                            </div>
                        </div>
            </div>
        </div>
    </div>

    <script src="/assets/vendor/js/bootstrap.js"></script>
    <script src="/assets/vendor/libs/jquery/jquery.js"></script>

    <script>
        $(document).ready(function () {
            const handlePhone = (event) => {
                let input = event.target;
                input.value = phoneMask(input.value);
            }

            const phoneMask = (value) => {
                if (!value) return ""
                value = value.replace(/\D/g, '')
                value = value.replace(/(\d{2})(\d)/, "($1) $2")
                value = value.replace(/(\d)(\d{4})$/, "$1-$2")
                return value
            }

            document.getElementById('telefone').addEventListener('keyup', handlePhone);
            
            $('#formSolicitar').on('submit', function () {
                $('#btnSpinner').removeClass('d-none');
                $('#btnSubmit').prop('disabled', true);
                $('#btnText').text('Enviando...');
            });
        });

    </script>
</body>

</html>